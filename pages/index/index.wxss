/**index.wxss**/
view, scroll-view {
  box-sizing: border-box;
}

.container {
  height: 100vh;
  background-size: cover;
}

.navigator {
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 34rpx;
  color:white;
}

.menu-icon {
  width: 50rpx;
  height: 50rpx;
}

scroll-view {
  display: flex;
  flex: 1;
}

.weather-all {
  display: flex;
  flex: 1;
  flex-direction: column;
  padding: 0 30rpx;
  align-items: center;
}

.weather-all .now-text {
  font-size: 80rpx;
  color:white;
  margin-top: 40rpx;
}

.weather-all .now-img {
  width: 140rpx;
  height: 140rpx;
}

.weather-all .aqi-container {
  width: calc(100vw - 60rpx);
  display: flex;
  justify-content: space-between;
  padding-top: 40rpx;
}

.aqi-text {
  font-size: 28rpx;
  color: white;
}

.common-img {
  width: 60rpx;
  height: 60rpx;
}

.daily-weather-container {
  display: flex;
  align-self: flex-start;
  margin: 40rpx 0rpx;
}

.daily-weather-container .daily-weather {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.daily-container {
  width: calc(100vw - 60rpx);
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0rpx;
}

.daily-container .daily {
  width: calc(100vw - 60rpx) / 3;
  display: flex;
}

.life-style-container {
  width:calc(100vw - 60rpx);
  margin: 40rpx 0rpx;
}

.life-style-container .life-style {
  width: calc(100vw / 4);
  height: calc(100vw / 4);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-color: gray;
  border-right-width: 2rpx;
  border-bottom-width: 2rpx;
  background-color: rgba(0,0,0,0.5);
}

.life-style-container .life-icon {
  font-size: 50rpx;
  color:white;
  padding: 10rpx 0;
}